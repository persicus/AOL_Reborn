<Window
    x:Class="AOL_Reborn.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="AOL Reborn - Chat"
    Width="800"
    Height="500"
    WindowStartupLocation="CenterScreen">

    <Grid>
        <!--  Define Rows: One for Messages (Expandable) & One for Input (Fixed)  -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!--  Chat Messages  -->
            <RowDefinition Height="Auto" />
            <!--  Input Box  -->
        </Grid.RowDefinitions>

        <!--  Chat Messages Display  -->
        <ScrollViewer
            x:Name="ChatScrollViewer"
            Grid.Row="0"
            Margin="10"
            VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ChatMessages" ItemsSource="{Binding Messages}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="5"
                            Padding="5"
                            Background="LightYellow"
                            CornerRadius="5">
                            <StackPanel>
                                <TextBlock
                                    FontWeight="Bold"
                                    Foreground="DarkBlue"
                                    Text="{Binding Username}" />
                                <TextBlock
                                    FontFamily="Tahoma"
                                    FontSize="14"
                                    Text="{Binding Message}"
                                    TextWrapping="Wrap" />
                                <TextBlock
                                    FontSize="10"
                                    Foreground="Gray"
                                    Text="{Binding Timestamp}" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!--  Message Input Area  -->
        <StackPanel
            Grid.Row="1"
            Margin="10"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">
            <TextBox
                x:Name="MessageInput"
                Width="600"
                Height="30"
                Margin="0,0,10,0"
                FontFamily="Tahoma"
                FontSize="14" />
            <Button
                Width="100"
                Height="30"
                Background="#C0C0C0"
                BorderBrush="#808080"
                BorderThickness="2"
                Click="SendButton_Click"
                Content="Send"
                FontWeight="Bold" />
        </StackPanel>
    </Grid>
</Window>
