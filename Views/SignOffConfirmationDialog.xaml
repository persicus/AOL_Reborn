<Window x:Class="AOL_Reborn.Views.SignOffConfirmationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AOL Instant Messenger (SM)" Height="150" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Are you sure you want to end your session?" FontSize="14" Margin="0,0,0,10" TextAlignment="Center" />

            <CheckBox x:Name="DoNotAskAgainCheckBox" Content="Do not ask me again." Margin="0,0,0,10" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="YesButton" Content="Yes" Width="75" Margin="5" Click="YesButton_Click" />
                <Button x:Name="NoButton" Content="No" Width="75" Margin="5" Click="NoButton_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
