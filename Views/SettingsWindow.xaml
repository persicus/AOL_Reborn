<Window
    x:Class="AOL_Reborn.Views.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Network Settings"
    Width="400"
    Height="250"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <StackPanel>
            <TextBlock Margin="0,0,0,5" Text="Server IP Address:" />
            <TextBox
                x:Name="IpAddressTextBox"
                Width="250"
                Height="25" />

            <TextBlock Margin="10,10,0,5" Text="Receive Port:" />
            <TextBox
                x:Name="ReceivePortTextBox"
                Width="100"
                Height="25" />

            <TextBlock Margin="10,10,0,5" Text="Send Port:" />
            <TextBox
                x:Name="SendPortTextBox"
                Width="100"
                Height="25" />

            <StackPanel
                Margin="0,20,0,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    Width="75"
                    Click="SaveSettings_Click"
                    Content="Save" />
                <Button
                    Width="75"
                    Margin="10,0,0,0"
                    Click="CancelSettings_Click"
                    Content="Cancel" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>