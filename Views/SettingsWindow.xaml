<Window x:Class="AOL_Reborn.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Network Settings" Height="250" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Server IP Address:" Margin="0,0,0,5"/>
            <TextBox x:Name="IpAddressTextBox" Width="250" Height="25"/>

            <TextBlock Text="Receive Port:" Margin="10,10,0,5"/>
            <TextBox x:Name="ReceivePortTextBox" Width="100" Height="25"/>

            <TextBlock Text="Send Port:" Margin="10,10,0,5"/>
            <TextBox x:Name="SendPortTextBox" Width="100" Height="25"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0, 20,0,0">
                <Button Content="Save" Width="75" Click="SaveSettings_Click"/>
                <Button Content="Cancel" Width="75" Margin="10,0,0,0" Click="CancelSettings_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
