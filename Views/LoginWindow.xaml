<Window
    x:Class="AOL_Reborn.Views.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Sign On"
    Width="320"
    Height="450"
    Background="#B0C4DE"
    BorderBrush="#000080"
    BorderThickness="3"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen">

    <Grid>
        <Border
            Margin="10"
            Padding="10"
            Background="#D4D0C8"
            BorderBrush="#808080"
            BorderThickness="2">

            <StackPanel>
                <!--  AIM Logo  -->
                <Image
                    Width="100"
                    Height="100"
                    Margin="0,5,0,5"
                    HorizontalAlignment="Center"
                    Source="/Assets/AIM_Logo.png" />

                <!--  AIM Title  -->
                <TextBlock
                    Margin="0,0,0,10"
                    HorizontalAlignment="Center"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="DarkBlue"
                    Text="AOL Instant Messenger" />

                <!--  Separator Line  -->
                <Rectangle
                    Height="2"
                    Margin="0,5,0,10"
                    Fill="#808080" />

                <!--  Screen Name Label  -->
                <TextBlock
                    Margin="0,0,0,5"
                    FontWeight="Bold"
                    Text="Screen Name:" />

                <!--  Username Dropdown  -->
                <ComboBox
                    x:Name="UsernameBox"
                    Width="250"
                    Height="25"
                    Margin="0,0,0,5"
                    IsEditable="True"
                    IsReadOnly="False"
                    MaxDropDownHeight="100"
                    StaysOpenOnEdit="True">
                    <ComboBox.ItemsPanel>
                        <!--  Ensures virtualization if many usernames  -->
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel />
                        </ItemsPanelTemplate>
                    </ComboBox.ItemsPanel>
                </ComboBox>

                <!--  Forgot Password Link  -->
                <TextBlock
                    Margin="0,0,0,10"
                    HorizontalAlignment="Left"
                    Cursor="Hand"
                    Foreground="Blue"
                    Text="Forgot Password?"
                    TextDecorations="Underline" />

                <!--  Password Label  -->
                <TextBlock
                    Margin="0,0,0,5"
                    FontWeight="Bold"
                    Text="Password:" />

                <!--  Password Field  -->
                <PasswordBox
                    x:Name="PasswordBox"
                    Width="250"
                    Height="25"
                    Margin="0,0,0,10" />

                <!--  Save Password & Auto-login Options  -->
                <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                    <CheckBox
                        x:Name="SavePasswordCheckBox"
                        Margin="0,0,10,0"
                        Content="Save password" />
                    <CheckBox x:Name="AutoLoginCheckBox" Content="Auto-login" />
                </StackPanel>

                <!--  Buttons (Help, Setup, Sign On)  -->
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button
                        x:Name="HelpButton"
                        Width="60"
                        Height="25"
                        Margin="0,0,10,0"
                        Background="#C0C0C0"
                        BorderBrush="#808080"
                        BorderThickness="2"
                        Content="Help" />

                    <Button
                        x:Name="SetupButton"
                        Width="60"
                        Height="25"
                        Margin="0,0,10,0"
                        Background="#C0C0C0"
                        BorderBrush="#808080"
                        BorderThickness="2"
                        Click="NetworkSettingsButton_Click"
                        Content="Setup" />

                    <Button
                        Width="60"
                        Height="25"
                        Background="#C0C0C0"
                        BorderBrush="#808080"
                        BorderThickness="2"
                        Click="SignInButton_Click"
                        Content="Sign On"
                        FontSize="12"
                        FontWeight="Bold"
                        Foreground="Green" />
                </StackPanel>

                <!--  Version Text  -->
                <TextBlock
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    FontSize="10"
                    Foreground="Gray"
                    Text="Version: 4.8.2016" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
