<Window x:Class="AOL_Reborn.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AOL Reborn - Login" Height="250" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid Background="LightGray">
        <!-- Title -->
        <TextBlock Text="AOL Reborn Login" FontSize="18" FontWeight="Bold"
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>

        <!-- Username -->
        <TextBlock Text="Username:" Margin="50,70,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="UsernameBox" Width="250" Height="25" Margin="130,70,0,0"
                 VerticalAlignment="Top" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Password -->
        <TextBlock Text="Password:" Margin="50,110,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="PasswordBox" Width="250" Height="25" Margin="130,110,0,0"
                     VerticalAlignment="Top"/>

        <!-- Sign-In Button -->
        <Button Content="Sign In" Width="100" Height="30" Margin="150,160,0,0"
                VerticalAlignment="Top" Click="SignInButton_Click"/>
    </Grid>
</Window>
