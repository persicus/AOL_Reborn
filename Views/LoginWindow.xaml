<Window
    x:Class="AOL_Reborn.Views.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="AOL Instant Messenger - Login"
    Width="350"
    Height="450"
    Background="#B3D9FF"
    BorderBrush="#000080"
    BorderThickness="2"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen">

    <Grid>
        <Border
            Margin="10"
            Padding="10"
            Background="#F0F0F0"
            BorderBrush="#808080"
            BorderThickness="2">
            <StackPanel>
                <!--  AIM Logo Placeholder  -->
                <TextBlock
                    Margin="0,10,0,20"
                    HorizontalAlignment="Center"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="DarkBlue"
                    Text="AOL Instant Messenger" />

                <!--  Username Field  -->
                <TextBlock
                    Margin="0,0,0,5"
                    FontWeight="Bold"
                    Text="Screen Name:" />
                <TextBox
                    x:Name="UsernameBox"
                    Width="300"
                    Height="25"
                    Margin="0,0,0,10" />

                <!--  Password Field  -->
                <TextBlock
                    Margin="0,0,0,5"
                    FontWeight="Bold"
                    Text="Password:" />
                <PasswordBox
                    x:Name="PasswordBox"
                    Width="300"
                    Height="25"
                    Margin="0,0,0,10" />

                <!--  Save Password & Auto-login Options  -->
                <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                    <CheckBox
                        x:Name="SavePasswordCheckBox"
                        Margin="0,0,10,0"
                        Content="Save password" />
                    <CheckBox x:Name="AutoLoginCheckBox" Content="Auto-login" />
                </StackPanel>

                <!--  Sign On Button  -->
                <Button
                    Width="120"
                    Height="35"
                    HorizontalAlignment="Center"
                    Background="#C0C0C0"
                    BorderBrush="#808080"
                    BorderThickness="2"
                    Click="SignInButton_Click"
                    Content="Sign On"
                    FontSize="14"
                    FontWeight="Bold" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
