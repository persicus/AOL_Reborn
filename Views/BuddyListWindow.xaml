<Window
    x:Class="AOL_Reborn.Views.BuddyListWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Buddy List Window"
    Width="300"
    Height="450"
    Background="#D4D0C8"
    Loaded="Window_Loaded"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  Top menu bar  -->
            <RowDefinition Height="Auto" />
            <!--  AIM logo row  -->
            <RowDefinition Height="*" />
            <!--  Main content (tabs)  -->
            <RowDefinition Height="Auto" />
            <!--  Bottom icons  -->
            <RowDefinition Height="Auto" />
            <!--  Status bar  -->
        </Grid.RowDefinitions>

        <!--  Top Menu Bar using a DockPanel to align items left and right  -->
        <DockPanel Grid.Row="0" Background="#E0E0E0">
            <!--  Left-aligned Menu  -->
            <Menu DockPanel.Dock="Left">
                <MenuItem Header="My AIM">
                    <MenuItem Click="SignOff_Click" Header="Sign Off" />
                </MenuItem>
                <MenuItem Header="People" />
                <MenuItem Header="Help" />
            </Menu>
            <!--  Right-aligned Network Settings Button  -->
        </DockPanel>

        <!--  AIM Logo Row  -->
        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            Background="#FFFFFF"
            Orientation="Vertical">
            <Image
                Width="100"
                Height="100"
                Margin="0,5,0,5"
                Source="/Assets/AIM_Logo.png" />
        </StackPanel>

        <!--  Main TabControl  -->
        <TabControl
            x:Name="MainTabControl"
            Grid.Row="2"
            Margin="0">
            <!--  Online Tab  -->
            <TabItem Header="Online">
                <Grid Background="#FFFFFF">
                    <TreeView x:Name="BuddyTreeView" Margin="5">
                        <TreeViewItem Header="Buddies (0/0)" IsExpanded="True" />
                        <TreeViewItem Header="Family (0/0)" IsExpanded="False" />
                        <TreeViewItem Header="Co-Workers (0/0)" IsExpanded="False" />
                        <TreeViewItem Header="Offline (0/0)" IsExpanded="False" />
                    </TreeView>
                </Grid>
            </TabItem>
            <!--  List Setup Tab  -->
            <TabItem Header="List Setup">
                <Grid Background="#FFFFFF">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="Gray"
                        Text="Folder/Group Management Goes Here" />
                </Grid>
            </TabItem>
        </TabControl>

        <!--  Bottom Icons Row  -->
        <StackPanel
            Grid.Row="3"
            Margin="5"
            HorizontalAlignment="Left"
            Background="#D4D0C8"
            Orientation="Horizontal">
            <Button
                x:Name="TodayButton"
                Width="32"
                Height="32"
                Margin="0,0,5,0"
                ToolTip="Today">
                <Image Source="/Assets/today_icon.png" Stretch="Uniform" />
            </Button>
            <Button
                x:Name="ChatButton"
                Width="32"
                Height="32"
                Margin="0,0,5,0"
                ToolTip="Buddy Chat">
                <Image Source="/Assets/chat_icon.png" Stretch="Uniform" />
            </Button>
            <Button
                x:Name="AddBuddyButton"
                Width="32"
                Height="32"
                Margin="0,0,5,0"
                Click="AddBuddyButton_Click"
                ToolTip="Add Buddy">
                <Image Source="/Assets/addbuddy_icon.png" Stretch="Uniform" />
            </Button>
            <Button
                x:Name="RemoveBuddyButton"
                Width="32"
                Height="32"
                Margin="0,0,5,0"
                Click="RemoveBuddyButton_Click"
                ToolTip="Remove Buddy">
                <Image Source="/Assets/Wrench_Icon.png" Stretch="Uniform" />
            </Button>

        </StackPanel>

        <!--  Status Bar  -->
        <Border
            Grid.Row="4"
            Height="25"
            VerticalAlignment="Bottom"
            Background="#ECE9D8"
            BorderBrush="#808080"
            BorderThickness="1">
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    FontSize="10"
                    Foreground="Gray"
                    Text="Prices delayed at least 15 minutes.  " />
                <TextBlock
                    FontSize="10"
                    Foreground="Gray"
                    Text="Unable to load ticker information.  " />
                <TextBlock
                    Cursor="Hand"
                    FontSize="10"
                    Foreground="Blue"
                    Text="Try AOL Today!"
                    TextDecorations="Underline" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
