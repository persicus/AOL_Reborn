<Window
    x:Class="AOL_Reborn.Views.ChatMainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="SmarterChild - AOL Instant Messenger"
    Width="600"
    Height="550"
    Background="#D4D0C8"
    BorderBrush="#000080"
    BorderThickness="3"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <!--  Chat Messages Area  -->
            <RowDefinition Height="Auto" />
            <!--  Formatting Toolbar  -->
            <RowDefinition Height="1.5*" />
            <!--  Input Box  -->
            <RowDefinition Height="Auto" />
            <!--  Bottom Toolbar Placeholder  -->
        </Grid.RowDefinitions>

        <!--  Chat Messages Display  -->
        <Border
            Grid.Row="0"
            Margin="5"
            Background="#FFFFFF"
            BorderBrush="#808080"
            BorderThickness="2">
            <ScrollViewer x:Name="ChatScrollViewer" VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="ChatMessages" ItemsSource="{Binding Messages}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="5"
                                Padding="5"
                                Background="Transparent"
                                CornerRadius="5">
                                <StackPanel>
                                    <TextBlock
                                        FontWeight="Bold"
                                        Foreground="DarkBlue"
                                        Text="{Binding Sender}" />
                                    <TextBlock
                                        FontFamily="Tahoma"
                                        FontSize="14"
                                        Text="{Binding Message}"
                                        TextWrapping="Wrap" />
                                    <TextBlock
                                        FontSize="10"
                                        Foreground="Gray"
                                        Text="{Binding Timestamp}" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!--  Formatting Toolbar  -->
        <Border
            Grid.Row="1"
            Height="30"
            Background="#C0C0C0"
            BorderBrush="#808080"
            BorderThickness="1">
            <StackPanel
                Margin="5"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Width="25"
                    Height="25"
                    Background="#D4D0C8"
                    Content="A" />
                <Button
                    Width="25"
                    Height="25"
                    Background="#D4D0C8"
                    Content="B"
                    FontWeight="Bold" />
                <Button
                    Width="25"
                    Height="25"
                    Background="#D4D0C8"
                    Content="I"
                    FontStyle="Italic" />
                <Button
                    Width="25"
                    Height="25"
                    Background="#D4D0C8"
                    Content="😊" />
            </StackPanel>
        </Border>

        <!--  Message Input Area  -->
        <Border
            Grid.Row="2"
            Padding="5"
            Background="#D4D0C8"
            BorderBrush="#808080"
            BorderThickness="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="100" />
                    <!--  Send Button Column  -->
                </Grid.ColumnDefinitions>
                <TextBox
                    x:Name="MessageInput"
                    Grid.Column="0"
                    Height="40"
                    Margin="5"
                    AcceptsReturn="True"
                    FontFamily="Tahoma"
                    FontSize="14"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto" />
                <Button
                    Grid.Column="1"
                    Width="90"
                    Height="40"
                    Background="#C0C0C0"
                    BorderBrush="#808080"
                    BorderThickness="2"
                    Click="SendButton_Click"
                    Content="Send"
                    FontWeight="Bold"
                    Foreground="Green" />
            </Grid>
        </Border>

        <!--  Bottom Toolbar Placeholder  -->
        <Border
            Grid.Row="3"
            Height="40"
            Background="#C0C0C0"
            BorderBrush="#808080"
            BorderThickness="1">
            <StackPanel
                Margin="5"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Width="100"
                    Height="30"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Click="DeleteChatHistory_Click"
                    Content="Clear Chat" />
            </StackPanel>
        </Border>
    </Grid>
</Window>